<Window x:Class="MatrixApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="практос3" Height="373" Width="523">
    <Grid Margin="0,0,0,-6">
        <StackPanel Margin="10,10,10,10">
            <TextBlock Text="Введите количество строк (M):" />
            <TextBox Name="RowsTextBox" Width="100" RenderTransformOrigin="0.475,-0.942" />
            <TextBlock Text="Введите количество столбцов (N):" />
            <TextBox Name="ColsTextBox" Width="100" />
            <Button Content="Создать матрицу" Click="CreateMatrix_Click" Width="150" Margin="0,10,0,0"/>
            <ItemsControl Name="MatrixItemsControl" Margin="0,10,0,0"/>
            <Button Content="Найти столбец" Click="FindColumn_Click" Width="150" Margin="0,10,0,0"/>
            <TextBlock Name="ResultTextBlock" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>